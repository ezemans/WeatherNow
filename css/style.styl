@import 'normalize.styl'
@import 'nib'
Indigo=#3f51b5;
IndigoLight=#c5cae9;
DarkGray=#454548;
GrayLight=#fafafa;
Gray=#f8f8f8;
Pink=#ff4081;
BackgroundGray=#fafafa;
HeightMobile=100vh;
shadowtext(a,b,c,d)
   -webkit-text-shadow a b c d
   -moz-text-shadow a b c d
   text-shadow a b c d
boxshadow(a,b,c,d)
   -webkit-box-shadow a b c d
   -moz-box-shadow a b c d
   box-shadow a b c d
border-radius(a)
	-webkit-border-radius a
	-moz-border-radius a
	border-radius a
/*--------Material Icons--------*/
.material-icons
	font-family 'Material Icons'
	font-weight normal
	font-style normal
	font-size 3rem
	display inline-block
	width 3rem
	height 3rem
	line-height 1
	text-transform none
	letter-spacing normal
	word-wrap normal
	/* Support for all WebKit browsers. */
	-webkit-font-smoothing antialiased
	/* Support for Safari and Chrome. */
	text-rendering optimizeLegibility
	/* Support for Firefox. */
	-moz-osx-font-smoothing grayscale
	/* Support for IE. */
	font-feature-settings 'liga'
	&.md-light
		color rgba(255, 255, 255, 1)
/*-----------------------------*/
body 
	height 100%
html
	font-size 100%
	scroll-behavior smooth
	height 100%
h1,h2,h3, h4, h5, h6
	font-weight normal 
	margin 0
	padding 0
.TheWeater
	display flex
	display -webkit-flex
	flex-direction column
	justify-content space-between
	color blue
	flex-wrap wrap
	align-self baseline
	.WeatherToday
		padding 0px
		width 100%
		height 100vh
.Temperature
	padding-top 0rem
	margin-top -10rem
	z-index 300000
	position absolute
	right 1rem
	li 
		list-style-type none
		color white
		text-align right
		display block
		padding-right 1rem
		line-height 5rem
		&.Degrees
			font-size 7rem
			font-weight 300
			margin-top 0
			margin-bottom 0
			shadowtext 1px 1px 2px #000
			&.D::after
				content "°"
		&.MinMax
			font-size 1.89rem
			font-weight 100
			shadowtext 1px 1px 2px #000
			padding-right 1.5rem
			.D::after
				content "°"
.Container-Msj
	display flex
	flex-direction row-reverse
	.Msj
		font-size 1.18rem
		color DarkGray
		width 16.12rem
		text-align right
		padding-right 1rem
		padding-top 2.37rem
		padding-bottom 1.37rem
		margin-bottom 0
.MyButton
	display block
	width 48px
	height 48px
	vertical-align middle
	border-radius(50%)
	padding 5px
	text-decoration none
	text-align center
	overflow hidden
	vertical-align baseline
	background-color Pink
	boxshadow 1px 1px 2px #000
	margin-right 1rem
	&:hover
		transform scale(1.04)
		boxshadow 2px 2px 3px #333
	&:active
		animation-play-state paused
/*-------------------------
--------Map---------------*/
.Container-More
	display flex
	flex-direction row-reverse
	padding-right 1rem
	ul 
		li
			list-style-type none
			text-align right
			span
				font-weight 300
				display block
				&.More
					color Indigo
					font-size 1.12rem
				&.State
					color DarkGray
					font-size 2.25rem
					margin-bottom 2.5rem
					&.Percent::after
						content "%"
					&.M::after
						content " meter/sec"

aside
	text-align right
	.author
		color IndigoLight
		font-weight 300
		font-size 0.68rem
		text-transform uppercase
		margin-right 1rem
		margin-top 2rem
		display block
		padding-bottom 2rem