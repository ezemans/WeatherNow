@import 'normalize.styl'
@import 'nib'
Indigo=#3f51b5;
IndigoLight=#c5cae9;
DarkGray=#454548;
GrayLight=#fafafa;
Gray=#f8f8f8;
Pink=#ff4081;
HeightMobile=100vh;
.TheWeater
	display flex
	display -webkit-flex
	flex-direction column
	justify-content space-between
	color blue
	border 1px solid @color
	flex-wrap wrap
	align-self baseline
	padding 0
	.WeatherToday
		padding 0px
		width 100%
		border 1px solid Indigo
		.Image
			background url('../img/clouds.jpg') no-repeat center center fixed
			-webkit-background-size cover
  			-moz-background-size cover
  			-o-background-size cover
  			background-size cover
			width 100%
			height 400px
	.WeatherMap
	.WeatherNext
		height HeightMobile
		border 1px solid Indigo
		box-sizing border-box
		font-size 1rem

	